@if (ViewBag.Heartbeat == null)
{
    <p>Cannot determine when the JobProcessor last ran.</p>
}
else
{
    <p>The DLCS Job Processor last ran @(((TimeSpan) (DateTime.UtcNow - (DateTime?)ViewBag.Heartbeat)).ToHumanReadableString()) ago.</p>
}
@if (ViewBag.HeartbeatWarning)
{
    <p class="danger">This needs investigating!</p>
}